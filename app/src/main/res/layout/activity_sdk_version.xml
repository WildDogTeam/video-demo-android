<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.wilddog.demo.activities.SDKVersionActivity">

    <RelativeLayout
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:background="@color/title_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/iv_cancel"
            android:layout_marginLeft="13.3dp"
            android:padding="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/about"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/item_background" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:text="Demo v1.0" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/text_color_666666"
            android:layout_marginTop="53dp"
            android:text="该示例程序基于" />

        <TextView
            android:id="@+id/tv_video_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="@color/text_color_666666"
            android:gravity="center"
            android:text="Wilddog Video SDK v1.1.0-beta" />

        <TextView
            android:id="@+id/tv_sync_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_666666"
            android:textSize="11sp"
            android:gravity="center"
            android:text="Wilddog Sync SDK v1.2.2" />

        <TextView
            android:id="@+id/tv_auth_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_666666"
            android:textSize="11sp"
            android:gravity="center"
            android:text="Wilddog Auth SDK v2.1.1" />

        <TextView
            android:id="@+id/tv_camera_360_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_666666"
            android:textSize="11sp"
            android:gravity="center"
            android:text="@string/camera360_sdk_v1_6" />

        <TextView
            android:id="@+id/tv_Tu_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_color_666666"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TuSDK v2.2" />

    </LinearLayout>
</LinearLayout>
