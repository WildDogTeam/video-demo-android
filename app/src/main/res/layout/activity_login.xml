<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wilddog.demo.activities.LoginActivity">
    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:id="@+id/iv_login_logo"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logo_des"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:layout_below="@+id/iv_login_logo"
        android:gravity="center"
        android:id="@+id/tv_logo_desc"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_des"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_conversation_program"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:layout_below="@+id/tv_logo_desc"
        android:gravity="center"
        />
    <Button
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:text="@string/login"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/text_color_white"
        android:layout_marginTop="97dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_login"
        android:background="@drawable/btn_orange_bg"
        android:layout_below="@+id/tv_conversation_program"
        />
</RelativeLayout>
