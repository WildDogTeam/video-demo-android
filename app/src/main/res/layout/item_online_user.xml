<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_popupwin_item_bg">
  <TextView
      android:id="@+id/contactitem_catalog"
      style="@style/MMListCatalog"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:textSize="14.7sp"
      android:layout_gravity="center_vertical"
      android:paddingRight="5.0dip" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="horizontal"
      android:minHeight="50dp"
      >
  <com.wilddog.conversation.view.CircleImageView
      android:layout_width="39dp"
      android:layout_marginLeft="20dp"
      android:layout_height="39dp"
      android:id="@+id/civ_photo"
      android:src="@drawable/logo"

      />
<TextView
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginLeft="10dp"
    android:textSize="14.7sp"
    android:text="ARY"
    android:id="@+id/tv_uid"
    android:textColor="@drawable/selector_item_text_color"
    android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>