<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_parent"
    android:background="@color/background"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:layout_gravity="center"
        android:background="@color/title_color"
        android:gravity="center"
        android:text="@string/personnal_settings"
        android:textColor="@color/item_background"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="17.3dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/ItemStyle"
        android:layout_height="76.7dp"
        >

    <com.wilddog.conversation.view.CircleImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/uid"
        android:id="@+id/civ_photo"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是默认昵称"
                android:id="@+id/tv_nickName"
                android:textColor="@color/text_color"
                android:textSize="17.3sp"
                android:layout_marginBottom="13.3dp"
                />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="11.3sp"
        android:id="@+id/tv_uid"
        android:layout_gravity="left"
        android:text="ID:564521351456"
        />
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复制"
        android:padding="5dp"
        android:textSize="15sp"
        android:textColor="@drawable/selector_textview_copy"
        android:background="@null"
        android:id="@+id/tv_copy"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="19dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/ItemStyle"
        android:id="@+id/ll_dimension"
        >
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/dimen"
            />
        <TextView
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dimension"
            android:textSize="@dimen/item_left_text_size"
            android:textColor="@color/text_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dimension"
            android:layout_weight="1"
            android:text="480P"
            android:textSize="@dimen/item_right_text_size"
            android:textColor="@color/text_color"
            android:gravity="center|right"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arraw"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_margen_left"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/ItemStyle"
        android:id="@+id/ll_beauty_plan"
        >
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/beauty_plan"
            />
        <TextView
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:textSize="@dimen/item_left_text_size"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:layout_height="wrap_content"
            android:text="@string/beauty_plan"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_beauty_plan"
            android:layout_weight="1"
            android:text="Camera360"
            android:textSize="@dimen/item_right_text_size"
            android:gravity="center|right"
            android:textColor="@color/text_color"
            android:layout_marginRight="@dimen/item_text_button_space"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arraw"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_margen_left"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/ItemStyle"
        android:id="@+id/ll_record_file"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/record_file"
            />
        <TextView
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_left_text_size"
            android:text="@string/record_file"
            android:textColor="@color/text_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_record_file"
            android:layout_weight="1"
            android:text=""
            android:gravity="center|right"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arraw"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_margen_left"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/ItemStyle"
        android:id="@+id/ll_blacklist"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/blacklist"
            />
        <TextView
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_left_text_size"
            android:text="@string/blackusers"
            android:textColor="@color/text_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center|right"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arraw"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_margen_left"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_SDK_version"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/about"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="19dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_user_login_out"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/sign_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="退出登录"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"/>


</LinearLayout>