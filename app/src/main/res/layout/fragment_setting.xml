<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:layout_gravity="center"
        android:background="@color/title_color"
        android:gravity="center"
        android:text="@string/personnal_settings"
        android:textColor="@color/item_background"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="17.3dp"
        android:background="@color/line_color" />

    <LinearLayout
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:layout_height="76.7dp"
        android:orientation="horizontal">

        <com.wilddog.conversation.view.CircleImageView
            android:id="@+id/civ_photo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/uid" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="这是默认昵称"
                android:textColor="@color/text_color"
                android:textSize="17.3sp" />

            <TextView
                android:id="@+id/tv_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="ID:564521351456"
                android:textColor="@color/text_color"
                android:textSize="11.3sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="19dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_dimension"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/dimen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/dimension"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_dimension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="480P"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_right_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_large_margen_left"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_beauty_plan"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/beauty_plan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/beauty_plan"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_beauty_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/item_text_button_space"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Camera360"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_right_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_large_margen_left"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_record_file"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/record_file" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/record_file"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_record_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_large_margen_left"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_blacklist"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/blacklist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/blackusers"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/item_large_margen_left"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_SDK_version"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="@string/about"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="19dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_user_login_out"
        style="@style/ItemStyle"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/sign_out" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_image_space"
            android:text="退出登录"
            android:textColor="@color/text_color"
            android:textSize="@dimen/item_left_text_size" />

        <TextView
            android:id="@+id/tv_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arraw" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />


</LinearLayout>