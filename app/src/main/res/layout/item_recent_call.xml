<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="50dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/selector_popupwin_item_bg">
  <com.wilddog.conversation.view.CircleImageView
      android:layout_width="38.7dp"
      android:layout_height="38.7dp"
      android:id="@+id/civ_photo"
      android:src="@drawable/logo"
      android:layout_marginLeft="10dp"
      />
  <LinearLayout
      android:layout_marginLeft="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nickname"
        android:textSize="14.7sp"
        android:textColor="@color/text_color"
        android:text="BABA"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通话时长:50秒"
        android:textSize="11.3sp"
        android:textColor="@color/text_color_hint"
        android:id="@+id/tv_duration"
        />
  </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_marginRight="15dp"
    android:textSize="11.3sp"
    android:text="刚刚"
    android:textColor="@color/text_color_hint"
    android:id="@+id/tv_call_time"
    android:layout_height="wrap_content" />
</LinearLayout>