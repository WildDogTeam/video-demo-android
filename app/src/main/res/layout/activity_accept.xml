<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/callbg"
    tools:context="com.wilddog.conversationdemo.activities.AcceptActivity">
    
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/called_user"
        android:layout_gravity="center"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/text_color_e5e5e5"
    android:textSize="25sp"
    android:text="54641353412123"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/tv_uid"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="邀你视频通话"
    android:textColor="@color/text_color_e5e5e5"
    android:textSize="16sp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/reject"
        android:id="@+id/tv_reject"
        android:textColor="@color/textColor_white"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:text="拒绝"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_accept"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/textColor_white"
        android:drawableTop="@drawable/accept"
        android:drawablePadding="5dp"
        android:text="接听"

        />
</LinearLayout>
</LinearLayout>
